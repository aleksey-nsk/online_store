<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Add foreign key to table products" author="Aleksey Zhdanov">
        <addColumn tableName="products">
            <column name="category_id" type="integer"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="products"
                                 baseColumnNames="category_id"
                                 referencedTableName="categories"
                                 referencedColumnNames="id"
                                 constraintName="products_categories_fk"/>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Бытовая техника')"/>
            <where>title='Пылесос'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Компьютеры')"/>
            <where>title='Ноутбук'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Компьютеры')"/>
            <where>title='Монитор'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Туризм')"/>
            <where>title='Удочка'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Туризм')"/>
            <where>title='Компас'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Канцтовары')"/>
            <where>title='Ручка'</where>
        </update>
        <update tableName="products">
            <column name="category_id" valueComputed="(SELECT id FROM categories WHERE name = 'Канцтовары')"/>
            <where>title='Карандаш'</where>
        </update>
    </changeSet>

</databaseChangeLog>
